{{> navbar}}
{{> header}}

<div class="container mt-5 mb-5">
   <div class="row">
      {{#ifEquals lang 'uz'}}
         {{#each news}}
            <div class="col-lg-4 col-md-6 col-sm-6 col-12 mb-3">
               <div class="card shadow">
                  <div class="card-body">
                     <img src="{{image}}" class="img-fluid" alt="{{uzTitle}}">
                     <h6 class="card-title mt-2">{{uzTitle}}</h6>
                     <p>{{sliceTitle uzContent}}</p>
                     <a href="/news/{{uzSlugUrl}}" class="btn btn-primary">Batafsil</a>
                  </div>
               </div>
            </div>
         {{/each}}
      {{else}}
         {{#each news}}
            <div class="col-lg-4 col-md-6 col-sm-6 col-12 mb-3">
               <div class="card shadow">
                  <div class="card-body">
                     <img src="{{image}}" class="img-fluid" alt="{{ruTitle}}">
                     <h6 class="card-title mt-2">{{ruTitle}}</h6>
                     <p>{{sliceTitle ruContent}}</p>
                     <a href="/news/{{ruSlugUrl}}" class="btn btn-primary">
                        Читать далее
                     </a>
                  </div>
               </div>
            </div>
         {{/each}}
      {{/ifEquals}}
      </div>
      <div class="col-12">
         <nav class="mt-3">
            <ul class="pagination">
               {{#paginate pagination type="previous"}}
                  <li {{#if disabled}}class="page-item disabled"{{/if}}>
                     <a href="?page={{n}}" class="page-link">
                        <i class="fas fa-angle-double-left"></i>
                     </a>
                  </li>
               {{/paginate}}
               {{#paginate pagination type="middle"}}
                  <li {{#if active}}class="page-item active"{{/if}}>
                     <a href="?page={{n}}" class="page-link  ">{{n}}</a>
                  </li>
               {{/paginate}}
               {{#paginate pagination type="next"}}
                  <li {{#if disabled}}class="page-item disabled"{{/if}}>
                     <a href="?page={{n}}" class="page-link">
                        <i class="fas fa-angle-double-right"></i>
                     </a>
                  </li>
               {{/paginate}}
            </ul>
         </nav>
      </div>
   </div>
</div>

{{> footer}}